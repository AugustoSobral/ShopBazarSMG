<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dots_layout_anuncio_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_pager_anuncio_details"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_qnt_fotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_pager_anuncio_details"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_bg_roxo"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/text_view_qnt_fotos_anuncio_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    tools:text="5" />

                <TextView
                    android:id="@+id/text_view_fotos_anuncio_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/colorWhite"
                    tools:text="Fotos" />
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_anuncio_details"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorWhite">

            </androidx.viewpager.widget.ViewPager>

            <com.like.LikeButton
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:icon_size="25dp"
                app:icon_type="heart" >

            </com.like.LikeButton>

        </RelativeLayout>

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:colorBackground"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/text_view_details_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="#494949"
                android:textSize="18sp"
                android:typeface="normal"
                tools:text="Camisa Regata Polo Wear - Nova" />

            <TextView
                android:id="@+id/text_view_details_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20dp"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:colorBackground"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingEnd="15dp"
            android:paddingBottom="13dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Características"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_details_caracteristica1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Estado:" />

                    <TextView
                        android:id="@+id/caracteristica1_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Usado"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_details_caracteristica2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Categoria:" />

                    <TextView
                        android:id="@+id/caracteristica2_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:minLines="2"
                        android:text="Roupas"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:colorBackground"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingEnd="15dp"
            android:paddingBottom="13dp">

            <TextView
                android:id="@+id/text_view_my_account_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/text_view_details_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:text="ASDHASDASHDi aisdoadaisdi asiodasidoaidoasi asiodhasijhdoiasdias"
                android:textSize="14sp"
                android:typeface="serif" />

        </LinearLayout>

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:colorBackground"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingEnd="15dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informações para contato"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_layout_anuncio_details_wpp_celular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_details_contato1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Whatsapp:" />

                    <TextView
                        android:id="@+id/contato1_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="(38)99826-8945" />

                    <TextView
                        android:id="@+id/text_view_details_contato3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        tools:text="Celular para ligações:" />

                    <TextView
                        android:id="@+id/contato3_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="(38)99827-8956" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_anuncio_details_tel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_details_contato2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="Tel Fixo para Ligações:" />

                    <TextView
                        android:id="@+id/contato2_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        tools:text="(38)99827-8956" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/linear_layout_perguntas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?android:colorBackground"
            android:paddingTop="13dp"
            android:paddingBottom="13dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView104"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Perguntas"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <LinearLayout
                    android:id="@+id/linear_layout_qnt_perguntas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/btn_bg_grey"
                    android:orientation="horizontal"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/text_view_qnt_perguntas_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="5" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textView105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_grey_24dp"
                android:gravity="center_vertical"
                android:text="Clique para fazer perguntas sobre o anúncio!"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:typeface="serif" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/linear_layout_anuncios_in_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentWhite"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingBottom="13dp">

            <TextView
                android:id="@+id/textView102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Mais anúncios do vendedor:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:typeface="serif" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_anuncios_in_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="10dp"
                tools:listitem="@layout/list_item_anuncio" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>