<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="140dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/list_promocao_image"
                android:layout_width="match_parent"
                android:layout_height="270dp" />

            <ProgressBar
                android:id="@+id/progressBar_list_item_promocao"
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_view_promocao_desconto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_red_desconto_promocao"
                android:padding="4dp"
                android:textColor="@color/colorWhite"
                tools:text="35%" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="22dp">

            <TextView
                android:id="@+id/text_view_promocao_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:fontFamily="serif"
                android:maxLines="1"
                android:textColor="#313131"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:text="Título" />

            <TextView
                android:id="@+id/text_view_promocao_informacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/size20dp"
                android:fontFamily="serif"
                android:textSize="14sp"
                tools:text="Alguma Informação" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>